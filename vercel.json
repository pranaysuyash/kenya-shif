{
  "buildCommand": "pip install -r requirements.txt",
  "outputDirectory": ".",
  "public": false,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.py?path=:1"
    }
  ],
  "env": {
    "OPENAI_API_KEY": "@OPENAI_API_KEY"
  },
  "functions": {
    "api/index.py": {
      "memory": 3008,
      "maxDuration": 300
    }
  }
}
